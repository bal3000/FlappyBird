@inject GameManager _gameManager

<div class="border-left"></div>
<div class="game-container" tabindex="0" @onclick="_gameManager.StartGame" @onkeyup="_gameManager.Jump">
    <div class="border-top"></div>
    <div class="sky">
        <Bird Model="_gameManager.Bird" />
    </div>
    <div class="ground"></div>
    @foreach (var pipe in _gameManager.Pipes)
    {
        <Pipe Model="pipe" />
    }
</div>
<div class="border-right"></div>

@code {
    protected override void OnInitialized()
    {
        _gameManager.MainLoopCompleted += (o, e) => StateHasChanged();
    }
}